def print_n(n):
    print("just_entered_function",n)
    if n==0:
        print("base_condition_hit -- return")
        return 1
    else:
        print("goin in else -- calling smaller IP function",n-1)
        print_n(n-1)
        print("printing_after n-1 condition",n)
        print(n)

n = 5
print("main_function_called")
print(print_n(n))


###########
# sum of n number
def sum(n):
    if n == 1:
        return 1
    ans = n + sum(n-1)
    print(ans)


n=2
